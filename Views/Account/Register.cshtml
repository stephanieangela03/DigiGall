@model DigiGall.Models.User

@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>
<form method="post" action="/Account/Register">
    <div>
        <label>Email</label>
        <input type="email" name="Email" value="@Model.Email" required />
    </div>
    <div>
        <label>Nama Lengkap</label>
        <input type="text" name="NamaLengkap" value="@Model.NamaLengkap" required />
    </div>
    <div>
        <label>Password</label>
        <input type="password" name="Password" required />
    </div>
    <div>
        <label>Asrama</label>
        <input type="text" name="Asrama" value="@Model.Asrama" />
    </div>
    <div>
        <label>Saldo Digigall</label>
        <input type="number" name="SaldoDigigall" value="@Model.SaldoDigigall" step="0.01" />
    </div>
    <button type="submit">Register</button>
</form>

@if (ViewBag.ErrorMessage != null)
{
    <p style="color: red;">@ViewBag.ErrorMessage</p>
}
