@model DigiGall.Models.User

@{
    ViewData["Title"] = "Register";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DigiGall.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container-fluid vh-100">
        <div class="row h-100">
            <!-- Kolom Kiri: Logo -->
            <div class="col-md-6 d-flex justify-content-center align-items-center bg-primary-logo">
                <img src="/images/harrypotter.png" alt="Logo DigiGall" class="logo">
            </div>

            <!-- Kolom Kanan: Form Login -->
            <div class="col-md-6 d-flex flex-column justify-content-center">
                <div class="welcome-container">
                    <div class="welcome-box">
                        <p class="register-text">Register</p>
                        <h2 class="welcome-heading">Welcome to</h2>
                        <h2 class="digigall-heading">DigiGall Quest</h2>
                        <h5 class="message">Adventure-Based Magic Coin Currency</h5>
                    </div>
                </div>

                <div class="form-container">
                    <form method="post" action="/Account/Login">
                        <div class="mb-3">
                            <input type="text" class="form-control" name="name" id="name" required
                                value="@Model.NamaLengkap" 
                                placeholder="Enter your Name"
                            />
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control" name="email" id="email" required 
                                value="@Model.Email"
                                placeholder="Enter your email"
                            />
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" name="password" id="password" required
                                value="@Model.Password" 
                                placeholder="Enter your Password"
                            />
                        </div>
                        <div class="mb-3">
                            <input type="dropdown" class="form-control" name="clan" id="clan" required 
                                value="@Model.Asrama"
                                placeholder="Choose Clan"
                            />
                        </div>
                        <div class="mb-3">
                            <input type="checkbox" id="checkbox" name="chekbox" value="Yes">
                            <label for="checbox"> I Agree to the Terms and Conditions</label><br>
                        </div>

                        @if (ViewBag.ErrorMessage != null)
                        {
                            <p style="color: red;">@ViewBag.ErrorMessage</p>
                        }
                        <button type="submit" class="btn btn-primary w-100">Register</button>
                    </form>
                </div>

                <p class="mt-3 text-center">- OR -</p>
                <p class="text-center">Already have an account? <a href="/Account/Login">Login</a></p>
            </div>
        </div>
    </div>
</body>
</html>
