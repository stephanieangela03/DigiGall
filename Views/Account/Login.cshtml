

@{
    ViewData["Title"] = "Login";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DigiGall.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="overflow-hidden">
    <div class="container-fluid vh-100">
        <div class="row h-100">
            <!-- Kolom Kiri: Logo -->
            <div class="col-md-6 d-flex justify-content-center align-items-center bg-primary-logo">
                <img src="/images/harrypotter.png" alt="Logo DigiGall" class="logo" style="max-width: 300px; height: auto;">


            </div>

            <!-- Kolom Kanan: Form Login -->
            <div class="col-md-6 d-flex flex-column justify-content-center">
                <div class="welcome-container mb-0">
                    <div class="welcome-box">
                        <p class="register-text">Login</p>
                        <h2 class="welcome-heading">Welcome to</h2>
                        <h2 class="digigall-heading">DigiGall Quest</h2>
                        <h5 class="message">Adventure-Based Magic Coin Currency</h5>
                    </div>
                </div>

                <div class="form-container mb-0">
                    <form method="post" action="/Account/Login">
                        <div class="mb-3">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input type="email" class="form-control" name="email" id="email" required
                                
                                    placeholder="Enter your email"
                                />
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input type="password" class="form-control" name="password" id="password" required 
                                
                                placeholder="Enter your password"
                                />
                                <span class="input-group-text" onclick="togglePasswordVisibility()" style="cursor: pointer;">
                                    <i class="fas fa-eye" id="togglePasswordIcon"></i>
                                </span>
                            </div>

                        </div>

                        @if (ViewBag.ErrorMessage != null)
                        {
                            <p style="color: red;">@ViewBag.ErrorMessage</p>
                        }
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </form>
                </div>

                <p class="mt-2 text-center">- OR -</p>
                <p class="text-center">Don't have an account? <a class="fw-bold" href="/Account/Register">Register</a></p>
            </div>
        </div>
    </div>
</body>

<script>
    function togglePasswordVisibility() {
        const passwordField = document.getElementById('password');
        const toggleIcon = document.getElementById('togglePasswordIcon');

        if (passwordField.type === 'password') {
            passwordField.type = 'text';
            toggleIcon.classList.remove('fa-eye');
            toggleIcon.classList.add('fa-eye-slash');
        } else {
            passwordField.type = 'password';
            toggleIcon.classList.remove('fa-eye-slash');
            toggleIcon.classList.add('fa-eye');
        }
    }
</script>
</html>
