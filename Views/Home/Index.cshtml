@model List<DigiGall.Models.Quest>

@{
    ViewData["Title"] = "Home Page";
}

<div class="quest-banner">
    <img src="/images/banner-image.png" alt="Quest Banner">
</div>

<h2>Quest Available</h2>
<div class="quest-container">
    @foreach (var quest in Model)  // Loop untuk menampilkan setiap quest
    {
        <div class="quest-card">
            <h3>@quest.NamaQuest</h3>  <!-- Menampilkan NamaQuest -->
            <div class="quest-points">
                <i class="fa-solid fa-coins"></i> @quest.Reward <!-- Menampilkan Reward -->
            </div>
            @* <div class="quest-giver">
                <i class="fa-solid fa-user"></i> @quest.QuestGiver <!-- Menampilkan QuestGiver -->
            </div> *@
            <p>@quest.Deskripsi</p>  <!-- Menampilkan Deskripsi quest -->
            <div class="quest-info">
                <span class="quest-deadline">Deadline: @quest.Deadline.ToString("dd/MM/yyyy")</span> <!-- Menampilkan Deadline -->
            </div>
        </div>
    }
</div>
