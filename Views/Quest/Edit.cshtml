@model DigiGall.Models.Quest

@{
    ViewData["Title"] = "Edit Quest";
}

<h1 class="text-center mb-4">Edit Quest</h1>

<div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <h4 class="card-title text-center">Quest Details</h4>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="QuestId" />

            <div class="mb-3">
                <label asp-for="NamaQuest" class="form-label fw-bold">Quest Name</label>
                <input asp-for="NamaQuest" class="form-control" readonly />
                <span asp-validation-for="NamaQuest" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Kriteria" class="form-label fw-bold">Criteria</label>
                <input asp-for="Kriteria" class="form-control" placeholder="Enter quest criteria" />
                <span asp-validation-for="Kriteria" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Deskripsi" class="form-label fw-bold">Description</label>
                <textarea asp-for="Deskripsi" class="form-control" rows="3" placeholder="Enter quest description"></textarea>
                <span asp-validation-for="Deskripsi" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Reward" class="form-label fw-bold">Reward</label>
                <input asp-for="Reward" class="form-control" placeholder="Enter reward details" />
                <span asp-validation-for="Reward" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Deadline" class="form-label fw-bold">Deadline</label>
                <input asp-for="Deadline" class="form-control" type="date" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
