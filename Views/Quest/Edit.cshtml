@model DigiGall.Models.Quest

@{
    ViewData["Title"] = "Edit Quest";
}

<h1>Edit Quest</h1>

<h4>Quest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="QuestId" />
            <div class="form-group">
                <label asp-for="NamaQuest" class="control-label"></label>
                <input asp-for="NamaQuest" class="form-control" readonly />
                <span asp-validation-for="NamaQuest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kriteria" class="control-label"></label>
                <input asp-for="Kriteria" class="form-control" />
                <span asp-validation-for="Kriteria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deskripsi" class="control-label"></label>
                <input asp-for="Deskripsi" class="form-control" />
                <span asp-validation-for="Deskripsi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reward" class="control-label"></label>
                <input asp-for="Reward" class="form-control" />
                <span asp-validation-for="Reward" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
