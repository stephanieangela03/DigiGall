@model DigiGall.Models.Quest

@{
    ViewData["Title"] = "Delete Quest";
}

<h1 class="text-center mb-4">Delete Quest</h1>

<div class="card mx-auto" style="max-width: 800px;">
    <div class="card-body">
        <h4 class="card-title text-center">Are you sure you want to delete this quest?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3 fw-bold">Nama Quest</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.NamaQuest)</dd>

            <dt class="col-sm-3 fw-bold">Kriteria</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Kriteria)</dd>

            <dt class="col-sm-3 fw-bold">Deskripsi</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Deskripsi)</dd>

            <dt class="col-sm-3 fw-bold">Reward</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Reward)</dd>

            <dt class="col-sm-3 fw-bold">Deadline</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Deadline)</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" name="id" value="@Model.QuestId" />
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-danger me-3">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
