@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<DigiGall.Models.Quest>

@{
    ViewData["Title"] = "Quest List";
}

<h2 class="text-center mb-4">Quest List</h2>

<div class="container mt-4">
    @if (User.IsInRole("Admin"))
    {
        <div class="mb-3 text-end">
            <a asp-action="Create" class="btn btn-success">Create New</a>
        </div>
    }

    <p>
        <span class="fw-bold">Username:</span> @User.Identity.Name
    </p>

    @foreach (var item in Model)
    {
        <div class="card shadow-sm mb-3" style="background-color: #F3F3F3;">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title fw-bold">@item.NamaQuest</h5>
                    <p class="mb-1"><i class="bi bi-list-task"></i> Criteria: @item.Kriteria</p>
                    <p class="mb-1"><i class="bi bi-info-circle"></i> Description: @item.Deskripsi</p>
                    <p class="mb-1 text-success"><i class="bi bi-gem"></i> Reward: @item.Reward</p>
                    <p class="mb-1 text-danger"><i class="bi bi-calendar-event"></i> Deadline: @item.Deadline</p>
                </div>
                <div class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.QuestId" class="btn btn-warning me-2">Edit</a>
                    <a asp-action="Detail" asp-route-id="@item.QuestId" class="btn btn-primary me-2">Detail</a>
                    <a asp-action="Delete" asp-route-id="@item.QuestId" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
