@model DigiGall.Models.Item

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mb-4">Edit Item</h1>

<div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <h4 class="card-title text-center">Item Details</h4>
        <hr />
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="NamaItem" class="form-label"></label>
                <input asp-for="NamaItem" class="form-control" readonly />
                <span asp-validation-for="NamaItem" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Deskripsi" class="form-label"></label>
                <textarea asp-for="Deskripsi" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Deskripsi" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="URLGambar" class="form-label"></label>
                <input asp-for="URLGambar" class="form-control" />
                <span asp-validation-for="URLGambar" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Stok" class="form-label"></label>
                <input asp-for="Stok" type="number" class="form-control" />
                <span asp-validation-for="Stok" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Harga" class="form-label"></label>
                <input asp-for="Harga" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Harga" class="text-danger"></span>
            </div>
            <div class="d-grid gap-2">
                <input type="hidden" asp-for="ItemId" />
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
