@model DigiGall.Models.Item

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center mb-4">Delete Item</h1>

<div class="card mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <h4 class="card-title text-center">Are you sure you want to delete this item?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.NamaItem)
            </dt>
            <dd class="col-sm-8 text-break">
                @Html.DisplayFor(model => model.NamaItem)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Deskripsi)
            </dt>
            <dd class="col-sm-8 text-break">
                @Html.DisplayFor(model => model.Deskripsi)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.URLGambar)
            </dt>
            <dd class="col-sm-8 text-break">
                @Html.DisplayFor(model => model.URLGambar)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Stok)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Stok)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Harga)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Harga)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="NamaItem" />
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
