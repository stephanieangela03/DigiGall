@model List<DigiGall.Models.Item>

@{
    ViewData["Title"] = "HogsmeadeShop";
}

<div class="search-container">
    <input type="text" placeholder="Search Transaction" class="search-box">
</div>

<div class="quest-container">
    @if (Model != null && Model.Any())  // Check if Model is not null and has items
    {
        @foreach (var item in Model)  // Loop untuk menampilkan setiap quest
        {
            <div class="card">
                <img src="@item.URLGambar" alt="@item.NamaItem" class="card-img">
                <div class="card-content">
                    <h2 class="card-title">@item.NamaItem</h2>
                    <div class="card-price">
                        <i class="fa-solid fa-coins"></i> @item.Harga
                    </div>
                    <p class="card-desc">@item.Deskripsi</p>
                </div>
                <div class="card-stock">Stock: @item.Stok</div>
                

                <form asp-controller="Items" asp-action="Purchase" method="post">
                    <input type="hidden" name="itemId" value="@item.ItemId" />
                    <input type="number" class="form-control mr-2" name="amount" placeholder="0" />
                    <button type="submit">Purchase</button>
                </form>
            </div>
        }
    }
    else
    {
        <p>No items available.</p>  // Message for when the model is empty or null
    }
</div>
