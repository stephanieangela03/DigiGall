@model List<DigiGall.Models.User>

@{
    ViewData["Title"] = "Manage Users";
}

<h1 class="text-center mt-4">Manage Users</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["SuccessMessage"]
    </div>
}

<div class="container mt-5">
    @foreach (var user in Model)
    {
        <div class="card shadow-sm mb-3" style="background-color: #F3F3F3;">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="card-title fw-bold">@user.NamaLengkap</h5>
                    <p class="mb-1"><strong>Asrama:</strong> @user.Asrama</p>
                    <p class="mb-1"><strong>Digigall:</strong> @user.SaldoDigigall</p>
                    <p class="mb-1"><strong>Role:</strong> @user.Role</p>
                </div>
                <div class="text-end">
                    <form asp-action="UpdatePoint" method="post" class="d-inline-flex align-items-center">
                        <input type="number" class="form-control me-2" name="point" placeholder="@user.SaldoDigigall" required style="max-width: 120px;" />
                        <input type="hidden" name="userId" value="@user.UserId" />
                        <button type="submit" class="btn btn-primary">Update</button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>
