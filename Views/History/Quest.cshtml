@model DigiGall.Models.QuestHistoryViewModel

@{
    ViewData["Title"] = "User Quests";
}

<h2>User Quests</h2>

<table class="table">
    <thead>
    <tr>
        <th>Quest Name</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Status</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var pemberianQuest in Model.PemberianQuests)
    {
        var quest = Model.Quests.FirstOrDefault(q => q.QuestId == pemberianQuest.QuestId);
        <tr>
            <td>@quest?.NamaQuest</td>
            <td>@pemberianQuest.TanggalMulai?.ToString("yyyy-MM-dd")</td>
            <td>@pemberianQuest.TanggalSelesai?.ToString("yyyy-MM-dd")</td>
            <td>@pemberianQuest.Status</td>
        </tr>
    }
    </tbody>
</table>