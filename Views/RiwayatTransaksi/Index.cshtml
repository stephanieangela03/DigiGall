@model IEnumerable<DigiGall.Models.RiwayatTransaksi>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NamaTransaksi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipeTransaksi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalHarga)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NamaPenerima)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NamaPengirim)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TanggalTransaksi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NamaTransaksi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipeTransaksi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalHarga)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NamaPenerima)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NamaPengirim)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TanggalTransaksi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
